<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherDashboard"
    android:background="@drawable/main_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@drawable/teacher_dash"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnClass"
                        android:background="@drawable/btn_class"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp" />

                    <Button
                        android:id="@+id/btnActivity"
                        android:background="@drawable/btn_act"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnProfile"
                        android:background="@drawable/btn_pro"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp" />

                    <Button
                        android:id="@+id/btnStudents"
                        android:background="@drawable/btn_students"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAbout"
                        android:background="@drawable/btn_about"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp" />

                    <Button
                        android:id="@+id/btnSettings"
                        android:background="@drawable/btn_settings"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp" />

                </LinearLayout>

            <Button
                android:id="@+id/btnLogout"
                android:background="@drawable/btn_logout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp" />

            </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>